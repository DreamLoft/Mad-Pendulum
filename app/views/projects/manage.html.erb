<h2><b>Manage <%= Project.find(@project.id).projectname %> Project</b></h2>

<%= form_for :project, url: project_path(@project), method: :patch do |f| %>
<div class="form-group">
    <%= f.label :project_status %><br>
      <%= f.select(:projectstatus, ['Ongoing','Pipeline','On Hold','Completed'], {}, { :class => 'form-control' }) %>

  </div>

  <div class="form-group">
  <%= f.label :close_remarks %><br>
  <%= f.text_area :close_remarks , class: 'form-control' %>
</div>

<p>
  <%= f.submit "Update Project", class: 'btn btn-primary'%>
</p>


<% end %>
