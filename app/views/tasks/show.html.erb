<div class = "panel panel-info">

     <ol class="breadcrumb panel-heading">
       <li><a href="<%= tasks_path %>"><%= @task.task_category %></a></li>
       <li class="active"><%= @task.taskname %></li>
     </ol>


<div>
  <span class = "label label-default">Task :</span>
  <%=       @task.taskname %>
</div>
<div>
  <span class = "label label-default">Task Category :</span>
  <%=       @task.task_category %>
</div>
<br/>
<% if (current_user.isadmin== true) %>
<%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-primary' %> |
<%= link_to 'Destroy', task_path(@task),class: 'btn btn-danger',
              method: :delete,
              data: { confirm: 'Are you sure?' } %>|
<% end %>
<%= link_to 'Back', tasks_path , class: 'btn btn-primary' %> <br/>
