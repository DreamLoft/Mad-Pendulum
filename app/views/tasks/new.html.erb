<h2><b>Add New Tasks</b></h2>
<hr/>
<%= form_for :task , url: tasks_path do |f| %>

  <div class="form-group">
    <%= f.label :task_name %><br>
    <%= f.text_field :taskname , class: 'form-control' ,:required=> true %>
  </div>
<div class="form-group">
  <%= f.label :task_category %><br>
  <%= f.select(:task_category, @taskcategory , {}, { :class => 'form-control' }) %>
</div>
  <p>
    <%= f.submit "Create New Task", class: 'btn btn-primary'%>
  </p>
<% end %>
<%= link_to 'Back', tasks_path %>
