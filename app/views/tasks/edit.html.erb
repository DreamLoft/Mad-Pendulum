<h2><b>Edit Task</b></h2>

<%= form_for :task, url: task_path(@task), method: :patch do |f| %>

<div class="form-group">
    <%= f.label :task_name %><br>
    <%= f.text_field :taskname  , class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :task_category %><br>
    <%= f.select(:task_category, @taskcategory , {}, { :class => 'form-control' }) %>
  </div>
  <p>
    <%= f.submit "Update Task", class: 'btn btn-primary'%>
  </p>

<% end %>

<%= link_to 'Back', tasks_path %>
